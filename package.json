{
  "name": "chum",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=12.14.1"
  },
  "scripts": {
    "build": "yarn run build-ts",
    "build-ts": "tsc src/index.ts",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "watch": "tsc-watch --onSuccess \"yarn run watch-node\"",
    "watch-node": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "docker-up": "node -r ts-node/register -r tsconfig-paths/register dist/index.js",
    "lint": "eslint \"src/**/*.{js,ts}\" \"client/src/app/**/*.ts\""
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^13.7.4",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-node": "^11.0.0",
    "tsc-watch": "^4.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ts-node": "^8.6.2",
    "winston": "^3.2.1"
  }
}